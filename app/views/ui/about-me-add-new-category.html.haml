    .form-sign-up-log-in
      %form.form-horizontal
        .form-group
          %label(for='full_name' class='col-sm-4 control-label') Title
          .col-sm-7
            %input(type='text' class='form-control' id='full_name'  placeholder='Title for the Category...' autofocus)
        .form-group
          .col-sm-offset-4.col-sm-10
            %button(type='submit' class='btn btn-primary') Add Category
        .form-group
          .col-sm-offset-4.col-sm-10
            %a(href='#' type='submit' class='btn btn-default default-button') Back
