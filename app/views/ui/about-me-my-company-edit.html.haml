%h1.text-center.large-heading Edit Company
%br

.row
  .col-md-3
    %ul.nav.nav-pills.nav-stacked.text-center
      %li(role='presentation')
        %a(href='#') Settings
      %li(role='presentation')
        %a(href='#') Reviews
      %li(role='presentation')
        %a(href='#') Friends
      %li(role='presentation' class='active')
        %a(href='#') Company
      %li(role='presentation')
        %a(href='#') Add new Company
      %li(role='presentation')
        %a(href='#') Add new Category
      %li(role='presentation')
        %a(href='#') Flags
  .col-md-6
    %br
    .form-sign-up-log-in
      %form.form-horizontal
        .form-group
          %label(for='full_name' class='col-sm-4 control-label') Name
          .col-sm-7
            %input(type='text' class='form-control' id='full_name'  placeholder='Name of the Company...' autofocus value='McDonalds')
        .form-group
          %label(for='city' class='col-sm-4 control-label')
            Ctiy
          .col-sm-7
            %select.form-control#city
              %option Ljubljana
              %option Berlin
              %option(selected) London
              %option New Yourk
              %option Los Angeles
        .form-group
          %label(for='price-range' class='col-sm-4 control-label')
            Price range
          .col-sm-7
            %select.form-control#price-range
              %option € (for anyone)
              %option(selected) €€ (for rich people)
              %option €€€ (for richer people)
              %option €€€€ (you can't afford that)
              %option €€€€€ (Bill Gates only section)
        .form-group
          %label(for='category' class='col-sm-4 control-label')
            Category
          .col-sm-7
            %select(class='form-control' id='category' multiple)
              %option(selected) Restaurants
              %option Travel
              %option(selected) Hotels
              %option Spa
              %option Health
        .form-group
          .col-sm-offset-4.col-sm-10
            %button(type='submit' class='btn btn-primary') Save
        .form-group
          .col-sm-offset-4.col-sm-10
            %a(href='#' type='submit' class='btn btn-default default-button') Back
