%h1.text-center.large-heading Search Results
%h5.text-center for
.row
  .search-friend
    .form-sign-up-log-in
      %form.form-inline
      = form_tag search_friend_path, class: 'form-inline', method: :get do
        .form-group
          = text_field_tag :name, @search_term, placeholder:'Name...', class: 'form-control'
          = submit_tag 'Search', class: 'btn btn-default default-button'
.row
  .col-md-8.col-md-offset-2
    %ul.list-of-friends
      - @search_result.each do |user|
        %li
          %span.cl-effect-12
            %a(href='#')= fa_icon 'user', text: "#{user.full_name}"
            %span(class='pull-right')
              %a(href='#' class='smaller-icon green')= fa_icon 'paper-plane-o', text: 'Friend Request'
