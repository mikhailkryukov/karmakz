%h1.text-center.large-heading Search Results
%h5.text-center for
.row
  .search-friend
    = render 'form'
.row
  .col-md-8.col-md-offset-2
    %ul.list-of-friends
      - @search_result.each do |user|
        %li
          %span.cl-effect-12
            %a(href='#')= fa_icon 'user', text: "#{user.full_name}"
            %span(class='pull-right')
              = link_to send_request_user_friend_path(current_user, user), class: 'smaller-icon green', method: :post do
                = fa_icon 'paper-plane-o', text: 'Friend Request'
